<!DOCTYPE html>
<html>

<head>
  <title>
    <%= title %>
  </title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body>
  <h1>
    <%= title %>
  </h1>
  <p>Welcome to <%= title %>
  </p>
  <% if (typeof user === 'undefined' ) { %>
    <p><a href="/login/42" onclick="document.getElementById('loading').hidden = false;">Login with 42</a></p>
    <div id="loading" hidden><img src="/images/puff.svg"></div>
  <% } else { %>
    <p>Hi, <%= user.displayName %></p>
    <p><a href="/logout">log out</a></p>
    <div>
      <%- include('./search.ejs') %>
    </div>
  <% } %>
</body>

</html>
